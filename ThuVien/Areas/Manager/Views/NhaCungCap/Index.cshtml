@using ThuVien.Areas.Manager.ViewModels
@model NhaCungCapIndexVm

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";

    var manccSort = (Model.SortOrder == "mancc") ? "mancc_desc" : "mancc";
    var tennccSort = (Model.SortOrder == "tenncc") ? "tenncc_desc" : "tenncc";
    var diachinccSort = (Model.SortOrder == "diachincc") ? "diachincc_desc" : "diachincc";
    var sdtnccSort = (Model.SortOrder == "sdtncc") ? "sdtncc_desc" : "sdtncc";
}

@*Modal thêm*@
<div class="modal fade" id="them" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm nhà cung cấp</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <form method="POST" asp-area="Manager" asp-controller="NhaCungCap" asp-action="Them">

                    <div class="form-group">
                        <label asp-for=nhacungCap.TenNCC>Tên nhà cung cấp</label>
                        <input class="form-control" asp-for=nhacungCap.TenNCC placeholder="Tên ...">
                    </div>
                    <div class="form-group">
                        <label asp-for=nhacungCap.DiaChiNCC>Địa chỉ nhà cung cấp</label>
                        <input class="form-control" asp-for=nhacungCap.DiaChiNCC placeholder="Địa chỉ ...">
                    </div>
                    <div class="form-group">
                        <label asp-for=nhacungCap.SdtNCC>SĐT nhà cung cấp</label>
                        <input class="form-control" asp-for=nhacungCap.SdtNCC placeholder="SĐT ...">
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-success">Thêm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách nhà cung cấp</h6>
    </div>
    <div class="card-body">
        <form method="GET">
            <p>
                <input type="text" asp-for="SearchString" />
                <input class="btn btn-dark" type="submit" value="Tìm kiếm" />
            </p>
        </form>

        @*Thêm*@
        <p>
            <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#them">Thêm</button>
        </p>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <a asp-route-sortOrder="@manccSort"
                               asp-route-searchString="@Model.SearchString">
                                @Html.DisplayNameFor(model => model.NhaCungCaps[0].MaNCC)
                            </a>
                        </th>
                        <th>
                            <a asp-route-sortOrder="@tennccSort"
                               asp-route-searchString="@Model.SearchString">
                                @Html.DisplayNameFor(model => model.NhaCungCaps[0].TenNCC)
                            </a>
                        </th>
                        <th>
                            <a asp-route-sortOrder="@diachinccSort"
                               asp-route-searchString="@Model.SearchString">
                                @Html.DisplayNameFor(model => model.NhaCungCaps[0].DiaChiNCC)
                            </a>
                        </th>
                        <th>
                            <a asp-route-sortOrder="@sdtnccSort"
                               asp-route-searchString="@Model.SearchString">
                                @Html.DisplayNameFor(model => model.NhaCungCaps[0].SdtNCC)
                            </a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var nhacungCap in Model.NhaCungCaps)
                    {
                    <tr>
                        <td>@nhacungCap.MaNCC</td>
                        <td>@nhacungCap.TenNCC</td>
                        <td>@nhacungCap.DiaChiNCC</td>
                        <td>@nhacungCap.SdtNCC</td>
                        <td>
                            <button class="btn btn-success" data-toggle="modal" data-target="#sua-@nhacungCap.MaNCC" a><i class="far fa-edit"></i></button>
                            <button class="btn btn-danger" data-toggle="modal" data-target="#xoa-@nhacungCap.MaNCC"><i class="far fa-trash-alt"></i></button>
                        </td>
                    </tr>

                        @*Modal xóa thể loại*@
                        <div class="modal fade" id="xoa-@nhacungCap.MaNCC" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Bạn có chắc muốn xóa Nhà cung cấp này?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="POST" asp-area="Manager" asp-action="Xoa" asp-controller="NhaCungCap">

                                            <div class="form-group">
                                                <label asp-for="@nhacungCap.MaNCC">Mã nhà cung cấp</label>
                                                <input readonly="readonly" class="form-control" asp-for="@nhacungCap.MaNCC" value="@nhacungCap.MaNCC">
                                            </div>

                                            <div class="modal-footer">
                                                <button class="btn btn-dark" type="button" data-dismiss="modal">Đóng</button>
                                                <button type="submit" class="btn btn-danger">Xóa</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @*Sửa*@
                        <div class="modal fade" id="sua-@nhacungCap.MaNCC" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Cập nhật Nhà cung cấp</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="POST" asp-area="Manager" asp-action="Sua" asp-controller="NhaCungCap">
                                            <div class="form-group">
                                                <label asp-for="@nhacungCap.MaNCC">Mã nhà cung cấp</label>
                                                <input readonly="readonly" class="form-control" asp-for="@nhacungCap.MaNCC" value="@nhacungCap.MaNCC">
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@nhacungCap.TenNCC">Tên nhà cung cấp</label>
                                                <input class="form-control" asp-for="@nhacungCap.TenNCC" value="@nhacungCap.TenNCC" placeholder="Tên nhà cung cấp">
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@nhacungCap.DiaChiNCC">Địa chỉ nhà cung cấp</label>
                                                <input class="form-control" asp-for="@nhacungCap.DiaChiNCC" value="@nhacungCap.DiaChiNCC">
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@nhacungCap.SdtNCC">SĐT nhà cung cấp</label>
                                                <input class="form-control" asp-for="@nhacungCap.SdtNCC" value="@nhacungCap.SdtNCC" >
                                            </div>

                                            <div class="modal-footer">
                                                <button class="btn btn-dark" type="button" data-dismiss="modal">Đóng</button>
                                                <button type="submit" class="btn btn-success">Sửa</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.NhaCungCaps.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.NhaCungCaps.HasNextPage ? "disabled" : "";
}

<a class="btn btn-default @prevDisabled"
   asp-route-sortOrder="@Model.SortOrder"
   asp-route-searchString="@Model.SearchString"
   asp-route-pageIndex="@(Model.NhaCungCaps.PageIndex -1)">Trước</a>
<a class="btn btn-default @nextDisabled"
   asp-route-sortOrder="@Model.SortOrder"
   asp-route-searchString="@Model.SearchString"
   asp-route-pageIndex="@(Model.NhaCungCaps.PageIndex +1)">Sau</a>