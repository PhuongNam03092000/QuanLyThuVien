@using ThuVien.Areas.Manager.ViewModels
@model PhieuPhatIndexVm
@{
    ViewData["Title"] = "Danh sách phiếu phạt";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";

}

<button type="submit" class="btn btn-success" data-toggle="modal" data-target="#themPhieuPhat">Thêm phiếu phạt</button>
<div class="modal fade" id="themPhieuPhat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" width="100%">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm phiếu phạt</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form method="POST" asp-area="Manager" asp-action="Create" asp-controller="PhieuPhat">
                    <div class="form-group">
                        <label for="userID" asp-for="phieuphat.MaPP">Mã Phiếu phạt</label>
                        <input readonly="true" class="form-control" asp-for="phieuphat.MaPP" id="maPP" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="userID" asp-for="phieuphat.UserId">Mã nhân viên</label>
                        <input  class="form-control" asp-for="phieuphat.UserId" id="userID" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="moDocGia" asp-for="phieuphat.MaDG">Mã độc giả</label>
                        <input class="form-control" asp-for="phieuphat.MaDG" id="maDocGia" placeholder="Mã độc giả">
                    </div>
                    <div class="form-group">
                        <label for="ngaymuon" asp-for="phieuphat.TongPhiPhat">Tổng phí phạt</label>
                        <input class="form-control" asp-for="phieuphat.TongPhiPhat" id="tongphiphat">
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Thêm</button>
                    </div>
                </form>


            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách phiếu phạt</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã phiếu phạt</th>
                        <th>Mã nhân viên</th>
                        <th>Mã độc giả</th>
                        <th>Tổng phí phạt</th>
                        <th>Thao tác</th>
                    <tr />
                </thead>
                <tbody>

                    @foreach (var phieuphat in Model.PhieuPhats)
                    {
                        <tr>
                            <td>@phieuphat.MaPP</td>
                            <td>@phieuphat.UserId</td>
                            <td>@phieuphat.MaDG</td>
                            <td>@phieuphat.TongPhiPhat</td>
                            <td>
                                <button class="btn btn-success" data-toggle="modal" data-target="#themCTPP-@phieuphat.MaPP"><i class="far fa-edit"></i></button>
                                <button class="btn btn-warning" data-toggle="collapse" data-target="#chitiet-@phieuphat.MaPP">Chi tiết phiếu</button>
                                <button class="btn btn-danger" data-toggle="modal" data-target="#xoaPP-@phieuphat.MaPP"><i class="far fa-trash-alt"></i></button>
                            </td>
                        </tr>
                    }

                    @foreach (var phieuphat in Model.PhieuPhats)
                    {
                        <tr>
                            <table class="table collapse" id="chitiet-@phieuphat.MaPP" style="table-layout:fixed;">
                                <thead>
                                <th>Mã sách</th>
                                <th>Nội dung vi phạm</th>
                                <th>Xử lý vi phạm</th>
                                <th>Phí phạt</th>
                                <th>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#xoaCTPP"> Xóa </button>
                                </th>
                                </thead>
                                <tbody>
                                    @{
                                        if (phieuphat.ChiTietPhieuPhats != null)
                                        {
                                            foreach (var ctpp in phieuphat.ChiTietPhieuPhats)
                                            {
                                                <th>@ctpp.MaSach</th>
                                                <th>@ctpp.NoiDungViPham</th>
                                                <th>@ctpp.XuLyViPham</th>
                                                <th>@ctpp.PhiPhat</th>
                                                <th><input type="checkbox" /></th>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </tr>
                    }

                    @foreach (var phieuphat in Model.PhieuPhats)
                    {

                        <div class="modal fade" role="dialog" id="xoaPP-@phieuphat.MaPP">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Xác nhận xóa</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="">
                                            <div class="form-group">
                                                <button class="btn btn-light" type="submit">Hủy</button>
                                                <button class="btn btn-success" type="submit">Xóa phiếu</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @foreach (var phieuphat in Model.PhieuPhats)
                    {
                        if (phieuphat.ChiTietPhieuPhats != null)
                        {
                            foreach (var ctpp in phieuphat.ChiTietPhieuPhats)
                            {
                                <div class="modal fade" role="dialog" id="themCTPP-@ctpp.MaSach">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title">Thêm chi tiết phiếu phạt</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <div class="modal-body">
                                                <form action="">
                                                    <div class="form-group">
                                                        <label asp-for="@ctpp.MaSach">Mã sách</label>
                                                        <input class="form-control" asp-for="@ctpp.MaSach" id="maSach">
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="@ctpp.NoiDungViPham">Nội dung vi phạm</label>
                                                        <input class="form-control" asp-for="@ctpp.NoiDungViPham" id="noidungvipham">
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="@ctpp.XuLyViPham">Xử lý vi phạm</label>
                                                        <input class="form-control" asp-for="@ctpp.XuLyViPham" id="xulyvipham">
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="@ctpp.PhiPhat">Phí phạt</label>
                                                        <input class="form-control" asp-for="@ctpp.PhiPhat" id="phiphat">
                                                    </div>

                                                    <div class="modal-footer">
                                                        <button class="btn btn-light" type="submit">Hủy</button>
                                                        <button class="btn btn-success" type="submit">Thêm phiếu</button>
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                    </tbody>
                    </table>
                </div>
            </div>
        </div>