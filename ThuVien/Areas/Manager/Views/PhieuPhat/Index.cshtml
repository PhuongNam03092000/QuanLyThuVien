@using ThuVien.Areas.Manager.ViewModels
@model PhieuPhatIndexVm
@{
    ViewData["Title"] = "Danh sách phiếu mượn";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";

}

<button type="submit" class="btn btn-success" data-toggle="modal" data-target="#themPhieuPhat">Thêm phiếu mượn</button>
<div class="modal fade" id="themPhieuPhat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true" width="100%">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm độc giả</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">

                <form method="POST" asp-area="Manager" asp-action="Create" asp-controller="PhieuMuon">
                    <div class="form-group">
                        <label for="userID">Mã nhân viên</label>
                        <input readonly="true" class="form-control"  id="userID"
                            placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="moDocGia" >Mã độc giả</label>
                        <input class="form-control"  id="maDocGia" placeholder="Mã độc giả">
                    </div>
                    <div class="form-group">
                        <label for="ngaymuon">Ngày mượn</label>
                        <input class="form-control"  id="ngaymuon"
                            placeholder=@DateTime.Now>
                    </div>
                    <div class="form-group">
                        <input class="form-control"  type="hidden">
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Thêm</button>
                    </div>
                </form>


            </div>
        </div>
    </div>
</div>

