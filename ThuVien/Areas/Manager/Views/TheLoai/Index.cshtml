@using ThuVien.Areas.Manager.ViewModels
@model TheLoaiIndexVm

@{
    ViewData["Title"] = "Danh sách thể loại";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";

    var tentlSort = (Model.SortOrder == "tentl") ? "tentl_desc" : "tentl";
}

@*Model thêm của Nam*@
<p>
    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#themTheLoai">Thêm</button>
    <button id="btnXoa" class="btn btn-danger">Xóa</button>
</p>

@*Modal thêm thể loại*@
<div class="modal fade" id="themTheLoai" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm thể loại</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <form method="POST" asp-area="Manager" asp-controller="TheLoai" asp-action="Them">

                    <div class="form-group">
                        <label for="TenTL" asp-for=theLoaiDto.TenTL>Tên thể loại</label>
                        <input class="form-control" id="maDocGia" asp-for=theLoaiDto.TenTL placeholder="Tên thể loại">
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-success">Thêm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách thể loại</h6>
    </div>
    <div class="card-body">
        <form method="GET">
            <p>
                <input type="text" asp-for="SearchString" />
                <input class="btn btn-dark" type="submit" value="Filter" />
            </p>
        </form>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Mã thể loại
                        </th>
                        <th>
                            <a asp-route-sortOrder="@tentlSort"
                               asp-route-searchString="@Model.SearchString">
                                @Html.DisplayNameFor(model => model.TheLoais[0].TenTL)
                            </a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var theLoai in Model.TheLoais)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => theLoai.MaTL)</td>
                            <td>@theLoai.TenTL</td>
                            <td>
                                <button class="btn btn-success" type="submit" data-toggle="modal" data-target="#suaTheLoai"><i class="far fa-edit"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.TheLoais.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.TheLoais.HasNextPage ? "disabled" : "";
}

<a class="btn btn-default @prevDisabled"
   asp-route-sortOrder="@Model.SortOrder"
   asp-route-searchString="@Model.SearchString"
   asp-route-pageIndex="@(Model.TheLoais.PageIndex -1)">Previous</a>
<a class="btn btn-default @nextDisabled"
   asp-route-sortOrder="@Model.SortOrder"
   asp-route-searchString="@Model.SearchString"
   asp-route-pageIndex="@(Model.TheLoais.PageIndex +1)">Next</a>