@using ThuVien.Areas.Manager.ViewModels
@model PhieuMuonIndexVm
@{
    ViewData["Title"] = "Danh sách phiếu mượn";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";

}

<button type="submit" class="btn btn-success" data-toggle="modal" data-target="#themPhieuMuon">Thêm phiếu mượn</button>
<div class="modal fade" id="themPhieuMuon" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" width="100%">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm độc giả</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                    <div class="row">
                        <div class="col col-4">
                            <form method="POST" asp-area="Manager" asp-action="Create" asp-controller="PhieuMuon">
                                <div class="form-group">
                                    <label for="userID" asp-for="phieumuon.UserId">Mã nhân viên</label>
                                    <input class="form-control" asp-for="phieumuon.UserId" id="userID" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label for="moDocGia" asp-for="phieumuon.MaDG">Mã độc giả</label>
                                    <input class="form-control" asp-for="phieumuon.MaDG" id="maDocGia" placeholder="Mã độc giả">
                                </div>
                                <div class="form-group">
                                    <label for="ngaymuon" asp-for="phieumuon.NgayMuon">Ngày mượn</label>
                                    <input class="form-control" asp-for="phieumuon.NgayMuon" id="ngaymuon" placeholder=@DateTime.Now>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for="phieumuon.TongPhiMuon" type="hidden">
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">Thêm</button>
                                </div>
                            </form>
                        </div>   
                        <div class="col col-8">
                            <form method="POST" asp-area="Manager" asp-action="CreateCTPM" asp-controller="PhieuMuon">
                                <div class="form-group">
                                    <div class="form-row">
                                        <div class="col">
                                            <label for="sach" asp-for="ctpm.MaPM">Mã phiếu mượn</label>
                                            <input class="form-control" asp-for="ctpm.MaPM" id="maphieumuon" placeholder="Mã phiếu mượn">
                                        </div>
                                        <div class="col">
                                            <label for="sach" asp-for="ctpm.MaSach">Mã sách</label>
                                            <input class="form-control" asp-for="ctpm.MaSach" id="masach" placeholder="Mã sách">
                                        </div>
                                        <div class="col">
                                            <label for="ngaytra" asp-for="ctpm.NgayHetHan">Ngày hết hạn</label>
                                            <input class="form-control" asp-for="ctpm.NgayHetHan" id="ngaytra">
                                        </div>
                                        <div class="col">
                                            <label for="giahan" asp-for="ctpm.GiaHan">Gia hạn</label>
                                            <input class="form-control" asp-for="ctpm.GiaHan" id="giahan">
                                        </div>
                                        <div class="col">
                                            <input type="hidden" asp-for="ctpm.PhiMuon" value="50000">
                                        </div>
                                        <div class="col">
                                            <button style="height:70px" type="submit" class="btn btn-success">Thêm chi tiết</button>
                                        </div>
                                    </div>
                                </div>    
                            </form>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Mã sách</th>
                                            <th>Tiền mượn</th>
                                            <th>Ngày Hết Hạn</th>
                                            <th>Gia Hạn</th>
                                        <tr />
                                        <tr>
                                        @{
                                            foreach (var pm in Model.PhieuMuons)
                                            {
                                                foreach (var ctpm in pm.ChiTietPhieuMuons)
                                                {
                                                    <td>@ctpm.MaSach</td>
                                                    <td>@ctpm.PhiMuon</td>
                                                    <td>@ctpm.NgayHetHan</td>
                                                    <td>@ctpm.GiaHan</td>
                                                    <input type="checkbox" asp-for="@ctpm.IsSelected" />
                                                }
                                            }
                                        }
                                        </tr>
                                        </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                     </div>
               
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách độc giả</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã phiếu</th>
                        <th>Mã nhân viên</th>
                        <th>Mã độc giả</th>
                        <th>Ngày mượn</th>
                        <th>Tổng phí mượn</th>
                    <tr />
                </thead>
                <tbody>
                    @foreach (var phieumuon in Model.PhieuMuons)
                    {
                        <tr>
                            <td>@phieumuon.MaPM</td>
                            <td>@phieumuon.UserId</td>
                            <td>@phieumuon.MaDG</td>
                            <td>@phieumuon.NgayMuon</td>
                            <td>@phieumuon.TongPhiMuon</td>

                            <td>
                                <button class="btn btn-success" data-toggle="modal" data-target="#"><i class="far fa-edit"></i></button>
                                <button class="btn btn-danger" data-toggle="modal" data-target="#"><i class="far fa-trash-alt"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>